{
  "compilerOptions": {
    "strictBindCallApply": false,
    "moduleResolution": "node",
    "target": "ES2017",
    "module":"commonjs",
    "lib": ["es6"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
